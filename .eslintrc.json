{
    "env": {
        "browser": true,
        "es2020": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "semi": ["error", "never"],
        "linebreak-style": "off",
        "react/jsx-filename-extension": "off",
        "no-unused-vars": ["warn", { "varsIgnorePattern": "^[I][A-Z]|^[T][A-Z]" }],
        "react/jsx-props-no-spreading": "off"
    }
}
